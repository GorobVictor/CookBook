@model Context.Model.User
@{
    ViewData["Title"] = "Авторизация";
}
<container>
    <div class="row justify-content-md-center">
        <div class="col col-lg-2">
            <form asp-action="Authorization" asp-controller="Login" asp-antiforgery="true">
                <div class="form-group">
                    <input type="text" asp-for="UsLogin" placeholder="Логин" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="password" asp-for="UsPassword" placeholder="Пароль" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Вход" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</container>
